@model usermodel
<main>
    @if (@TempData["mailmessege"] != null)
    {
        <div class="d-flex justify-content-center align-items-center mb-3">
            <div class="toast align-items-center fade show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body text-success $green-900">
                        <h1>@TempData["IsUserAdded"]</h1>
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <span><h1>@TempData["IsUserAdded"]</h1></span>

    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="~/assets/img/logo.png" alt="">
                                <span class="d-none d-lg-block">Sign Up</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                    <p class="text-center small">Enter your personal details to create account</p>
                                </div>

                                <form class="row g-3 needs-validation"  >


                                    <div class="col-12">
                                        <label class="form-label">Your Email</label>
                                        <input type="email" class="form-control" id="yourEmail" asp-for="email">
                                        <span asp-validation-for="email"></span>


                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Username</label>
                                        <input type="text" class="form-control" id="yourUsername" asp-for="username">
                                        <span asp-validation-for="username"></span>

                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Mobile No</label>
                                        <input type="text" class="form-control" id="yourUsername" asp-for="mobileno">
                                        <span asp-validation-for="mobileno"></span>

                                    </div>




                                    <div class="col-12">
                                        <label class="form-label">Password</label>
                                        <input type="password" class="form-control" id="yourPassword" asp-for="password">
                                        <span asp-validation-for="password"></span>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required>
                                            <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and conditions</a></label>
                                            <div class="invalid-feedback">You must agree before submitting.</div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit" asp-controller="hOME" asp-action="SaveUser">Create Account</button>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0">Already have an account? <a asp-action="Index">Log in</a></p>
                                    </div>
                                </form>

                            </div>
                        </div>



                    </div>
                </div>
            </div>

        </section>

    </div>
</main><!-- End #main -->